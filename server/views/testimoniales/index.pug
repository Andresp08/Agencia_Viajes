extends ../layout/index
block contenido 
    main.container.mt-5
        //la variable viene del route
        h1.text-center.mb-5 #{pagina} 
        
        .row
            .col-md-12
                //renderizar los testimoniales desde partials
                include ../layout/partials/testimoniales
                
            .col-md-12
                h2.text-center Agrega un Testimonial
                //viene del router
                if(errores)
                    each error in errores 
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(type="text", class="form-control" placeholder="Tu Nombre", name="nombre", id="nombre", value=nombre)
                            .form-group
                                label(for="correo") Correo Electronico
                                input(type="email", class="form-control" placeholder="Tu Email", name="correo", id="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", class="form-control" rows="3", placeholder="Tu Mensaje")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")
                                