extends ../layout/index
block contenido 
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")
            //la variable viene del route
            .col-md-7
                //los valores definidos en el modelo
                h1 #{viaje.titulo} 
                p
                    i.fas.fa-calendar-alt 
                    |  Fecha Ida:  #{viaje.fecha_ida} - Fecha Vuelta:  #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio} COP
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles} Cupos Disponibles
                p.text-justify #{viaje.descripcion}